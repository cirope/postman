<% if @tickets.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <caption><%= t '.title_html', tenant: link_to(@tenant, @tenant, title: @tenant) %></caption>
    <thead>
      <tr>
        <th><%= Ticket.human_attribute_name 'subject' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.subject %></td>
          <td><%= link_to_show [@tenant, ticket] %></td>
          <td><%= link_to_edit edit_tenant_ticket_path(@tenant, ticket) %></td>
          <td><%= link_to_destroy [@tenant, ticket] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_tenant_ticket_path(@tenant), class: 'btn btn-primary' %>
