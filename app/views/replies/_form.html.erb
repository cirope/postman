<%= simple_form_for [@ticket, @reply] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, input_html: { autofocus: true, rows: 4 } %>
    <% unless @ticket.feedback_requested_was %>
      <label>
        <%= check_box_tag 'feedback_requested', '1', params[:feedback_requested] %>
        <%= Ticket.human_attribute_name 'feedback_requested' %>
      </label>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
