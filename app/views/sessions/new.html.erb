<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_tag sessions_path, novalidate: 'novalidate' do %>
        <div class="form-inputs">
          <div class="form-group">
            <%= label_tag :email, t('.email'), class: 'control-label' %>
            <div class="controls">
              <%= email_field_tag :email, params[:email], class: 'form-control', autofocus: true %>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :password, t('.password'), class: 'control-label' %>
            <div class="controls">
              <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>
          </div>

          <div class="checkbox">
            <label>
              <%= check_box_tag :remember_me, 1, params[:remember_me] %> <%= t('.remember_me') %>
            </label>
          </div>
        </div>

        <div class="form-actions">
          <%= submit_tag t('.log_in'), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p><%= link_to t('.forgot_password'), new_password_reset_path %></p>
  </div>
</div>
