<% if @feedbacks.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html', ticket: link_to(@ticket, @ticket)) %>
<% else %>
  <table class="table table-striped table-hover">
    <caption><%= t '.title_html', ticket: link_to(@ticket, @ticket), tenant: link_to(@tenant, @tenant) %></caption>
    <thead>
      <tr>
        <th><%= Feedback.human_attribute_name 'from' %></th>
        <th><%= Feedback.human_attribute_name 'score' %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.from %></td>
          <td><%= feedback_score feedback.score %></td>
          <td><%= link_to_show [@ticket, feedback] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
