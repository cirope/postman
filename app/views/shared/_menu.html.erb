<div class="navbar navbar-fixed-top">
  <div class="container">
    <% if current_user %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <% end %>

    <%= link_to t('app_name'), root_url, class: 'navbar-brand' %>

    <% if current_user %>
      <div class="nav-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
          <%= menu_item_for model: Tenant, path: tenants_path %>
          <%= menu_item_for model: User,   path: users_path %>
          <%= menu_item_for model: Ticket, path: tickets_path, append_to_label: pending_tickets_badge %>
        </ul>

        <%= render 'shared/user_actions' %>
      </div>
    <% end %>
  </div>
</div>
